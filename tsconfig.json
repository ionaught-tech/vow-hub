{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "src/*": ["./src/*"],
      "*": ["./node_modules/*"]
    }
  },
  "include": ["src/**/*"]
}
